
<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
   <SourceProxy
     name="TextureMapFromField"
     class="ttkTextureMapFromField"
     label="TTK TextureMapFromField">
     <Documentation
        long_help="TTK plugin which generates a texture map from one or two
point data scalar fields."
        short_help="TTK plugin which generates a texture map from one or two
point data scalar fields.">
          This plugin is useful to convert scalar fields to texture coordinates
or to generate texture-based level lines out of a single scalar fields.
     </Documentation>
     <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <InputArrayDomain name="input_array" attribute_type="point" number_of_components="1" />
        <Documentation>
          Data-set to texture map.
        </Documentation>
      </InputProperty>

      <IntVectorProperty
         name="OnlyUComponent"
         label="Only U Component"
         command="SetOnlyUComponent"
         number_of_elements="1"
         default_values="1" >
        <BooleanDomain name="bool" />
         <Documentation>
          Define only the U component (set the V component to 0).
         </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
         name="RepeatUTexture"
         label="Repeat U Texture"
         command="SetRepeatUTexture"
         number_of_elements="1"
         default_values="0" >
        <BooleanDomain name="bool" />
         <Documentation>
          Repeat texture on the U component.
         </Documentation>
      </IntVectorProperty>

      <StringVectorProperty name="UComponent" label="U Component" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="0">
            <ArrayListDomain attribute_type="Scalars" name="array_list">
                <RequiredProperties>
                    <Property function="Input" name="Input" />
                </RequiredProperties>
            </ArrayListDomain>
            <Documentation>U component of the texture map.</Documentation>
        </StringVectorProperty>

      <IntVectorProperty
         name="OnlyVComponent"
         label="Only V Component"
         command="SetOnlyVComponent"
         number_of_elements="1"
         default_values="0" >
        <BooleanDomain name="bool" />
         <Documentation>
          Define only the V component (set the U component to 0).
         </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
         name="RepeatVTexture"
         label="Repeat V Texture"
         command="SetRepeatVTexture"
         number_of_elements="1"
         default_values="0" >
        <BooleanDomain name="bool" />
         <Documentation>
          Repeat texture on the V component.
         </Documentation>
      </IntVectorProperty>

        <StringVectorProperty name="VComponent" label="V Component" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5" default_values="1">
            <ArrayListDomain attribute_type="Scalars" name="array_list">
                <RequiredProperties>
                    <Property function="Input" name="Input" />
                </RequiredProperties>
            </ArrayListDomain>
            <Documentation>V component of the texture map.</Documentation>
        </StringVectorProperty>

      <PropertyGroup panel_widget="Line" label="Input options">
        <Property name="OnlyUComponent" />
        <Property name="RepeatUTexture" />
        <Property name="UComponent" />
        <Property name="OnlyVComponent" />
        <Property name="RepeatVTexture" />
        <Property name="VComponent" />
      </PropertyGroup>

      ${DEBUG_WIDGETS}

      <Hints>
        <ShowInMenu category="TTK - Misc" />
      </Hints>

   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>
